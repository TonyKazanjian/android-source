<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_activity_blocly"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_activity_blocly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary" />

        <View
            android:id="@+id/v_activity_blocly_actionbar_padding"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="?attr/actionBarSize">


            <FrameLayout
                android:id="@+id/fl_activity_blocly"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize"/>


            <FrameLayout
                android:id="@+id/fl_activity_blocly_right_pane"
                android:layout_width="480dp"
                android:layout_height="match_parent"
                android:background="@color/white_primary"
                android:elevation="4dp">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/fl_tb_activity_blocly"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom= "@id/tb_activity_blocly"
                    android:background="?attr/colorPrimary"
                    android:layout_gravity="center_horizontal|top" />

                <CheckBox
                    android:id="@+id/cb_rss_item_check_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:button="@drawable/btn_check_checkbox"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="right|top" />

                <CheckBox
                    android:id="@+id/cb_rss_item_favorite_star"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:button="@drawable/btn_star_checkbox"
                    android:layout_gravity="right|top"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="45dp"
                    tools:ignore="RtlCompat" />

                <io.bloc.android.blocly.ui.widget.RobotoTextView
                    style="@style/Button"
                    android:id="@+id/tv_rss_item_visit_site"
                    android:text="visit site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:paddingTop="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:layout_gravity="left|top"/>

                <ScrollView
                    android:id="@+id/scrollableContents"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tb_activity_blocly">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    </LinearLayout>
                </ScrollView>

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_nav_activity_blocly"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="?android:windowBackground"
        android:layout_gravity="left"/>

</android.support.v4.widget.DrawerLayout>