<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:blocly="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_fragment_rss_item_detail_header"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <android.support.v7.widget.Toolbar
            android:id="@+id/fl_tb_activity_blocly"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white_primary_54"
            android:layout_gravity="center_horizontal|top" />

            <CheckBox
                android:id="@+id/cb_rss_item_favorite_star"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:button="@drawable/btn_star_checkbox"
                android:layout_gravity="right|top"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="45dp"/>


            <CheckBox
                android:id="@+id/cb_rss_item_check_mark"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:button="@drawable/btn_check_checkbox"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="right|top" />

<!--<android.support.v7.widget.ActionMenuView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->
            <!--<item android:id="@+id/action_share"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:icon="@drawable/ic_share_selector"-->
                <!--android:title="@string/menu_share"-->
                <!--android:orderInCategory="0"-->
                <!--android:layout_gravity="center|center"-->
                <!--app:showAsAction="ifRoom"/>-->
<!--</android.support.v7.widget.ActionMenuView>-->

            <io.bloc.android.blocly.ui.widget.RobotoTextView
                style="@style/Button"
                android:id="@+id/tv_rss_item_visit_site"
                android:text="visit site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:layout_gravity="left|top"/>
            </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fl_fragment_rss_item_detail_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <ImageView
                android:id="@+id/iv_fragment_rss_item_detail_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_primary_54"/>

            <ProgressBar
                android:id="@+id/pb_fragment_rss_item_detail_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateOnly="true"
                android:layout_gravity="center"/>

        <io.bloc.android.blocly.ui.widget.RobotoTextView
            style="@style/RssItemDetailHeader"
            android:id="@+id/tv_fragment_rss_item_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fl_fragment_rss_item_detail_header"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>


        <io.bloc.android.blocly.ui.widget.RobotoTextView
            style="@style/Body1"
            android:id="@+id/tv_fragment_rss_item_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_fragment_rss_item_detail_header"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"/>


            </LinearLayout>

    </ScrollView>


</RelativeLayout>