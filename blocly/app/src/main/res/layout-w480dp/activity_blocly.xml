<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_activity_blocly"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_activity_blocly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="?attr/actionBarSize">

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_activity_blocly"
            android:layout_width="400dp"
            android:layout_height="320dp"
            android:layout_below="@+id/tb_activity_blocly"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <FrameLayout
            android:id="@+id/fl_activity_blocly_right_pane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fl_activity_blocly"
            android:background="@color/white_primary">

        </FrameLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView

        android:id="@+id/rv_nav_activity_blocly"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="?android:windowBackground"
        android:layout_gravity="left"/>

</android.support.v4.widget.DrawerLayout>